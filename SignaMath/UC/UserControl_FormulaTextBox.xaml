<UserControl x:Class="SignaMath.UserControl_FormulaTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:WpfMath.Controls;assembly=WpfMath"
             xmlns:local="clr-namespace:SignaMath"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" HorizontalAlignment="Center" VerticalAlignment="Center">
    <Grid>
        <controls:FormulaControl Cursor="IBeam" x:Name="formulaControl_formatted" Margin="0,4,0,0" MouseLeftButtonDown="formulaControl_formatted_MouseLeftButtonDown" Background="#00000000" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
        <TextBox Visibility="Collapsed" x:Name="textBox_clear" Background="Transparent" FontSize="20" LostFocus="textBox_clear_LostFocus" KeyDown="textBox_clear_KeyDown" TextChanged="textBox_clear_TextChanged" BorderThickness="2,2,2,2" BorderBrush="#00ABADB3" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
    </Grid>
</UserControl>
